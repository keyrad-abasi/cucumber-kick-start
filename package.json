{
  "name": "kick-start",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run cucumber-check",
    "cucumber": "node ./node_modules/@cucumber/cucumber/bin/cucumber-js tests/features/**/*.feature --require tests/step-definitions/**/*.ts --require-module ts-node/register --format json:tests/reports/cucumber-report.json",
    "cucumber-check": "node ./node_modules/@cucumber/cucumber/bin/cucumber-js tests/features/**/*.feature --require tests/step-definitions/**/*.ts --require-module ts-node/register --dry-run",
    "test": "yarn cucumber",
    "report": "ts-node tests/reporters/html-reporter.ts"
  },
  "author": "Keyrad Abbasi <keyrada@systemgroup.net>",
  "license": "MIT",
  "description": "This project kick starts a cucumber project",
  "devDependencies": {
    "@cucumber/cucumber": "^8.6.0",
    "@types/cucumber-html-reporter": "^5.0.1",
    "cucumber-html-reporter": "^5.5.0",
    "expect": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
